<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:gravity="center"
                tools:context="com.d.candy.f.androidviewtutorial.SQLite.SQLiteFragment">

    <Button
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="insert entry"
        android:id="@+id/button_sqlite_insert"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete latest entry"
        android:id="@+id/button_sqlite_delete"
        android:layout_below="@+id/button_sqlite_insert"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:padding="8dp"
            android:id="@+id/text_sqlite_logcat"
            android:background="#4527A0"
            android:textColor="@color/colorAccent"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>
